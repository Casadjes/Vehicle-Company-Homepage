---
import Navbar from "./Navbar.astro";
import NavbarMobile from "./Navbar-Mobile.astro";
import { Image } from "astro:assets";
---

<header class="h-screen md:h-auto lg:h-screen">
  <NavbarMobile />
  <Navbar />

  <div
    class="mx-auto max-w-screen-2xl flex flex-col items-center justify-between mt-5 md:pt-10 lg:flex-row overflow-hidden"
  >
    <!--contenedor izquierdo -->
    <div class="w-full">
      <h1
        class="text-4xl md:text-5xl max-w-72 md:max-w-md uppercase text-pretty text-[#003478] mb-10 lg:mb-20 pl-5 lg:pl-12 font-light"
      >
        The Future of <span class="text-[#FBAA0C] font-medium">
          Exhilaration</span
        >
      </h1>
      <!-- Todo:Letras -->
      <!--lineas mobile-->
      <p
        class="uppercase pl-6 text-2xl md:text-4xl font-light text-white bg-primary lg:hidden"
      >
        ford mustang <span>2021</span>
      </p>
      <div class="w-full bg-primary h-8 md:h-10 mt-3 lg:hidden"></div>
      <!--botones -->
      <div class="pl-6 lg:pl-12 pt-10 flex gap-x-2">
        <button class="bg-[#003478] text-white py-3 px-8 rounded-sm">
          Build & Price
        </button>
        <button
          class="py-3 px-8 text-textSecondary hover:bg-slate-50 rounded-sm transition-colors"
        >
          Watch Video
        </button>
      </div>
    </div>
    <!--contenedor derecho-->
    <div class="w-full pl-3 relative">
      <Image
        width={763}
        height={766}
        src="/vehicle2.svg"
        alt="hero"
        class="h-auto max-h-[500px] w-full lg:hidden"
      />
      <Image
        width={1399}
        height={739}
        src="/vehicle.svg"
        alt="hero"
        class="hidden lg:block max-h-[285px]"
      />

      <!--lineas desktop-->
      <div
        class="hidden lg:flex flex-col uppercase w-[150%] -z-10 bg-primary h-[55px] min-[1058px]:h-[57px] min-[1084px]:h-[58px] absolute -left-[100%] top-[42%] wrapper"
      >
        <span class="text-white uppercase pl-6 lg:pl-14 text-xl font-light"
          >ford mustang 2021</span
        >
        <div class="w-full h-[7px] bg-white absolute top-[43%]"></div>
      </div>
    </div>
  </div>
</header>

<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  @layer components {
    .wrapper {
      mask-image: linear-gradient(
        to right,
        rgba(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 1) 6%
      );
    }
  }
</style>
