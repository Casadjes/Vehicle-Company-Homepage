---
import { Image } from "astro:assets";
import { NavItems } from "../../constants/navbar";
---

<nav class="flex justify-between mx-auto max-w-screen-2xl px-6 md:px-12 2xl:px-0 pt-6">
  <a href="https://withastro.com/" class="">
    <Image
      src="/logo.svg"
      alt="Ford logo"
      width={100}
      height={50}
      class={"cursor-pointer aspect-[116/44]"}
    />
  </a>

  <ul class="flex gap-4 items-center">
    {
      NavItems.map((item) => (
        <li class="">
          <a
            href={item.path}
            class="text-sm md:text-base font-semibold uppercase text-gray-400 hover:text-gray-800 hover:opacity-100  transition-colors "
          >
            {item.name}
          </a>
        </li>
      ))
    }
  </ul>

  <div class="">
    <button class="hidden md:inline-block py-2 px-6"> Sign In </button>

    <button
      class="hidden rounded-sm text-[#003478] text-base font-medium md:inline-block py-2 px-6 border border-[#003478] hover:opacity-80"
    >
      Sign Up
    </button>
  </div>
</nav>
